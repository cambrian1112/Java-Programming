import java.util.Scanner;

public class lab2task7 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("driving distance :");
        double distance = scanner.nextDouble();
        System.out.print("miles per gallon");
        double fuelEfficiency = scanner.nextDouble();
        System.out.print("price per gallon");
        double pricePerGallon = scanner.nextDouble();
        double gallonsNeeded = distance / fuelEfficiency;
        double Cost = gallonsNeeded * pricePerGallon;
        System.out.printf("the cost of driving is"+Cost);
    }
}
